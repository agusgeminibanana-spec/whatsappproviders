
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the qrcodes collection
    match /qrcodes/{qrCodeId} {
      allow read: if true;
      allow write: if false; // Explicitly deny writes
    }

    // Secure all other documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
