
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Cualquier usuario autenticado puede leer la lista de usuarios
    match /users/{userId} {
      allow read: if request.auth != null;
      // Solo un admin puede crear, actualizar o borrar perfiles de usuario
      allow write: if request.auth.token.role == 'admin';
    }

    // Ejemplo de una colección de 'mensajes'
    match /messages/{messageId} {
        // Cualquier usuario autenticado puede crear un mensaje
        allow create: if request.auth != null;
        // Solo el autor del mensaje o un admin pueden leerlo, actualizarlo o borrarlo.
        allow read, update, delete: if resource.data.authorId == request.auth.uid || request.auth.token.role == 'admin';
    }

    // Colección de administración, solo para admins.
    match /admin-data/{docId} {
        allow read, write: if request.auth.token.role == 'admin';
    }
  }
}
