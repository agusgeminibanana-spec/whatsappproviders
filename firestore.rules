
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Insecure: Allows anyone to read and write to chats.
    // TODO: Secure these rules before deploying to production.
    match /chats/{chatId} {
      allow read, write: if true;
    }

    // Insecure: Allows anyone to read and write to messages.
    // TODO: Secure these rules before deploying to production.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if true;
    }

    // Insecure: Allows anyone to read and write to WhatsApp sessions.
    // TODO: Secure these rules before deploying to production.
    match /whatsapp_sessions/{sessionId} {
      allow read, write: if true;
    }

    // Any authenticated user can read the list of users
    match /users/{userId} {
      allow read: if request.auth != null;
      // Only an admin can create, update, or delete user profiles
      allow write: if request.auth.token.role == 'admin';
    }

    // Example of a 'messages' collection
    match /messages/{messageId} {
        // Any authenticated user can create a message
        allow create: if request.auth != null;
        // Only the author of the message or an admin can read, update, or delete it.
        allow read, update, delete: if resource.data.authorId == request.auth.uid || request.auth.token.role == 'admin';
    }

    // Admin collection, only for admins.
    match /admin-data/{docId} {
        allow read, write: if request.auth.token.role == 'admin';
    }
  }
}
